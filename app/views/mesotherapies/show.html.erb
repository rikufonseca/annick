<div class="nav-attached">
  <% @mesotherapies.each do |mesotherapy| %>
        <%= link_to mesotherapy_path(mesotherapy), class: 'button-meso' do %>
          <button class="name"> <%= mesotherapy.name %> </button>
        <% end %>
  <% end %>
</div>
<div class="all">
  <%= link_to "< retour", menu_path, class:"page-back" %>
  <div class="cont cont-one">
    <h2 class="meso descript"><%= @mesotherapie.description %></h2>
    <h3 class="meso"><%= @mesotherapie.materials %></h3>
    <h1 class="meso title"> Massage <%= @mesotherapie.name %> </h1>
    <h3 class="meso duration"><%= @mesotherapie.time_one %> ~ <%= @mesotherapie.price_one %>  € / <%= @mesotherapie.time_two %> ~ <%= @mesotherapie.price_two %>  € </h3>
    <div class="section">
      <%= image_tag(@mesotherapie.image, width: 500, height: 400, :class => "pic") %>
      <h4 class="sub med"> SON ORIGINE </h4>
      <p class="text and"><%= @mesotherapie.origin %></p>
    </div>
  </div>
  <div class="cont">
    <h4 class="meso second-cont sub"> SES CARACTERISTIQUES </h4>
    <p class="and center"><%= @mesotherapie.caracteristic %></p>
  </div>
  <div class="cont">
    <h4 class="meso second-cont sub"> LES BIENFAITS </h4>
    <p class="and center"><%= @mesotherapie.bienfait %></p>
  </div>
  <div class="cont">
    <h4 class="meso second-cont sub"> PERIODE PRECAUNISEE POUR CE MASSAGE </h4>
    <p class="and center"><%= @mesotherapie.time_precaunisation %></p>
  </div>
  <div class="cont">
    <h4 class="meso second-cont sub"> LA TECHNIQUE </h4>
    <p class="and center"><%= @mesotherapie.technique %></p>
  </div>
   <div class="cont colored">
    <p class="and center"><%= @mesotherapie.motto %></p>
  </div>
</div>
